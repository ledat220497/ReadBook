<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Splash_Screen"
    >

    <TextView
        android:id="@+id/textlogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ỨNG DỤNG ĐỌC SÁCH"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textSize="36dp"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_splash"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textlogo"
        app:lottie_fileName="animationbook.json" />
    <TextView
        android:id="@+id/wellcome_appbook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chào mừng đến với \n ứng dụng đọc sách"
        app:layout_constraintTop_toBottomOf="@id/animation_splash"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="24dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/textwellcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/wellcome_appbook"
        android:text="Những cuốn sách khiến bạn \ncó tư duy sắc bén hơn\ncuộc sống thú vị hơn\ntinh thần nâng cao hơn\nmức độ cang thẳng giảm đi và \ntrái tim biết động lòng trắc ẩn hơn"
        android:textAlignment="center"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:textSize="18sp"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btngetstartlogin"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Bắt Đầu"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="20dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>